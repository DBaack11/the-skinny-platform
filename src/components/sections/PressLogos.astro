---
// Import press logos
import { Image } from "astro:assets";
import WSJLogo from "../../assets/press/wsj.png";
import NYTLogo from "../../assets/press/nyt.png";
import EconomistLogo from "../../assets/press/economist.png";

const logos = [WSJLogo, NYTLogo, EconomistLogo, WSJLogo, NYTLogo, EconomistLogo];
---

<div class="py-12 border-t border-gray-200">
  <p class="text-center text-gray-500 text-sm mb-8">Proudly partnered with</p>
  <div class="flex flex-wrap justify-center items-center gap-8 md:gap-16 px-4">
    {
      logos.map((logo) => (
        <Image
          src={logo}
          alt="Press Logo"
          class="h-6 w-auto opacity-60 hover:opacity-100 transition-opacity"
          height={24}
        />
      ))
    }
  </div>
</div> 