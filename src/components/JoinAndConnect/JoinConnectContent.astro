---
import Facebook from "../../assets/facebook.svg";
import LinkedIn from "../../assets/linkedin.svg";
import YouTube from "../../assets/youtube.svg";
import { Mail } from "lucide-astro";
---

<div class="flex flex-col items-center justify-center -mt-16">
  <h1 class="text-2xl md:text-3xl font-medium text-skinny-cream drop-shadow-lg">Follow us and connect!</h1>

  <div id="icons" class="flex flex-row items-center gap-12 my-12">
    <LinkedIn size={50} class="hover:drop-shadow-lg hover:-translate-y-1.5 transition-all duration-300 drop-shadow-md" fill="white" />
    <YouTube size={60} class="hover:drop-shadow-lg hover:-translate-y-1.5 transition-all duration-300 drop-shadow-md" fill="white" />
    <Facebook size={50} class="hover:drop-shadow-lg hover:-translate-y-1.5 transition-all duration-300 drop-shadow-md" fill="white" />
    <div class="flex flex-row items-center justify-center gap-2 hover:drop-shadow-lg hover:-translate-y-1.5 transition-all duration-300 drop-shadow-md">
      <Mail size={50} stroke="white" />
      <p class="text-xl text-skinny-cream drop-shadow-lg">info@theskinnyplatform.com</p>
    </div>
  </div>

  <p class="text-sm text-skinny-cream drop-shadow-lg mb-3">Copyright © 2025 The Skinny Platform™ | Powered by The Skinny Platform™</p>
</div>
