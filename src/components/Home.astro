---
import Heading from "./text/Heading.astro";
import QuoteCarousel from "./text/QuoteCarousel.astro";
import CTAButton from './CTAButton.astro';
import WhatAndWhy from "./sections/WhatAndWhy.astro";
import BenAndDan from "./sections/BenAndDan.astro";
import JoinAndConnect from "./sections/JoinAndConnect.astro";
---

<main class="min-h-screen">
  <section id="header" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
    <div class="grid md:grid-cols-2 gap-16 items-center">
      <Heading />
      <QuoteCarousel />
    </div>
    <div class="mt-12 flex justify-center">
      <CTAButton />
    </div>
  </section>

  <WhatAndWhy />
  <BenAndDan />
  <JoinAndConnect />
</main>
