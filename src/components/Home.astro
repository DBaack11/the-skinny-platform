---
import Heading from "./text/Heading.astro";
import QuoteCarousel from "./text/QuoteCarousel.astro";
import CTAButton from "./CTAButton.astro";
import BenDanHeader from "./BenAndDan/BenDanHeader.astro";
import BenDanContent from "./BenAndDan/BenDanContent.astro";
import JoinConnectHeader from "./JoinAndConnect/JoinConnectHeader.astro";
import JoinConnectContent from "./JoinAndConnect/JoinConnectContent.astro";
import WhatAndWhy from "./WhatAndWhy.astro";

---

<main class="">
  <section id="header" class="mb-6">
    <div class="grid md:grid-cols-2 items-center justify-center">
      <Heading />
      <QuoteCarousel />
    </div>
    <div class="flex justify-center">
      <CTAButton label="Schedule a call" action="schedule-call" />
    </div>
  </section>

  <section id="what-and-why" class="bg-skinny-blue">
    <WhatAndWhy />
  </section>

  <section id="ben-and-den" class="flex flex-col items-center">
    <BenDanHeader />
    <BenDanContent />
  </section>

  <section id="join-and-connect" class="bg-skinny-orange flex flex-col items-center">
    <JoinConnectHeader />
    <JoinConnectContent />
  </section>
</main>

<script>
  const tabs = document.querySelectorAll("[data-tab]");
  tabs.forEach((tab) => {
    tab.addEventListener("click", () => {
      // Update active state of buttons
      tabs.forEach((t) => {
        t.classList.remove("bg-white", "text-gray-900");
        t.classList.add("text-white");
      });
      tab.classList.add("bg-white", "text-gray-900");
      tab.classList.remove("text-white");

      // Show/hide content
      const targetId = tab.getAttribute("data-tab");
      document.querySelectorAll("#what, #why").forEach((content) => {
        content.classList.toggle("hidden", content.id !== targetId);
      });
    });
  });
</script>
