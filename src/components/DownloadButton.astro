---
import { Download } from "lucide-astro";

interface Props {
  label: string;
  pdfUrl: string;
}

const { label, pdfUrl }: Props = Astro.props;
---

<a
  href={pdfUrl}
  target="_blank"
  data-pdf-url={pdfUrl}
  class="group inline-flex items-center justify-center gap-1 sm:gap-2 relative p-1 sm:px-4 sm:py-2
    text-black hover:text-skinny-orange border border-black/30 rounded-lg
    hover:border-skinny-orange/50
    transition-[color,border-color] duration-400"
>
  <span class="text-[10px] sm:text-xs xl:text-sm text-center">{label}</span>
  <Download class="w-4 h-4 md:w-5 md:h-5 transition-transform duration-400 group-hover:translate-y-0.5" />
</a>

<script>
  // document.addEventListener('astro:page-load', () => {
    const isMobile = /iPhone|iPad|Android/i.test(navigator.userAgent);
    
    if (!isMobile) {
      document.querySelectorAll('a[data-pdf-url]').forEach(link => {
        link.setAttribute('download', '');
      });
    }
  // });
</script>